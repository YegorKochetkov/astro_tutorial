---
import Social from "./Social.astro";

const platforms = [
	{ link: "https://github.com/YegorKochetkov", label: "GitHub" },
	{ link: "https://twitter.com/kegor", label: "Twitter" },
	{
		link: "https://www.linkedin.com/in/yegor-kochetkov-299b35222/",
		label: "LinkedIn",
	},
];
---

<style>
	footer {
		margin-block-start: 1.5rem;
		& ul {
			display: flex;
			flex-wrap: wrap;
			gap: 1rem;
		}
	}
</style>

<footer>
	<ul>
		{
			platforms.map((platform) => (
				<li>
					<Social platform={platform.link} label={platform.label} />
				</li>
			))
		}
	</ul>
</footer>
