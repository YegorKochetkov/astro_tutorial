	<button>ğŸ‘</button>
</div>

<script>
	import van from "../scripts/van-1.5.0.min.js";
	import { counterState as counter } from "../scripts/countStore.js";

	const { button, div } = van.tags;
	const likesCount = van.derive(() => `â¤ï¸ ${counter.val} `);
	const padding = van.derive(() => {
		if (counter.val > 3) {
			return 3;
		}

		if (counter.val < 1) {
			return 1;
		}

		return counter.val;
	});

	const Counter = () => {
		return div(
			{ class: "counter" },
			likesCount,
			button(
				{
					onclick: () => counter.val++,
					style: () => `--buttonPadding: ${padding.val}rem`,
				},
				"ğŸ‘",
			),
			button(
				{
					onclick: () => counter.val--,
					style: () => `--buttonPadding: ${padding.val}rem`,
				},
				"ğŸ‘",
			),
		);
	};
	document.addEventListener("astro:page-load", () => {
		document.querySelector("#counterFallback")!.replaceWith(Counter());
	});
</script>
